<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include ('./partials/head') %>

        <link href="./css/stylesForm.css" rel="stylesheet">
    </head>
    <body>
    <!--HEADER-->
    <%- include ('./partials/header') %>
     <main>
        <h1>Mi cuenta</h1>
        <div class="tablet">
        <div class="caja1"><h5> Iniciar sesion</h5>
        
            <form action="/cuenta" method="post" class="create-form">
            <div class="control-formulario">
            <p>
                <label for="email" >Email *</label>
                <input type="email" id="email" name="email" class="control"
                value=<%= locals.old && old.email ? old.email : " " %>
                >

                <% if (locals.errors && errors.email){  %>
                  <div  style="color:rgb(255,0,0);">
                    <%= errors.email.msg   %> 
                  </div>
                  <% } %> 


            </p>
            </div>
            <div class="control-formulario">
                <p>
                    <label for="password" >Contraseña *</label>
                    <input type="password" id="password" name="password" class="control">

                    <% if (locals.errors && errors.password){  %>
                        <div  style="color:rgb(255,0,0);">
                          <%= errors.password.msg   %> 
                        </div>
                        <% } %> 

                </p>
            </div>
            <div>
                <p class="checkbox">
                    <label><input type="checkbox" name="recordarme"> Recordarme</label>
                    <a class="sr_button" href="#" > Olvide la contraseña</a>
                </p>
            </div>
            <div>
                <p>
                    <button class="button-log" type="submit">Iniciar sesion </button> 
                </p>
            </div>     
            <div>
                <p> 
                    <a class="checkbox" href="/cuenta/registro">¿No tienes cuenta? Creala</a>
                </p>
            </div>

            </form>
        </div>
       </div>
     </main>


    <!--FOOTER-->
    <%- include ('./partials/footer') %>


    </body>