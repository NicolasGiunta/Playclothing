<!DOCTYPE html>
<html lang="es">

<head>
    <%- include ('./partials/head') %>

        <link href="/css/stylesForm.css" rel="stylesheet">
</head>

<body>
    <!--HEADER-->
    <%- include ('./partials/header') %>

        <main>
            <h1>Crear nuevo producto</h1>
            <div class="tablet">
                <div class="caja2">
                    <h5> Crear producto</h5>

                    <form action="/producto/create" method="post" class="create-form" enctype="multipart/form-data">
                        <div class="control-formulario">
                            <p>
                                <label for="nombreDelProducto">Nombre del producto *</label>
                                <input type="text" id="nombreDelProducto" name="nombreDelProducto" class="control">
                                <div class="erroresNombreDelProducto coloresErrores">
                                <% if (locals.errors && errors.nombreDelProducto){  %>
                                    <div  style="color:rgb(255,0,0);">
                                      <%= errors.nombreDelProducto.msg %> 
                                    </div>
                                    <% } %> 
                                </div>
                            </p>
                        </div>
                        <div class="control-formulario">
                            <p>
                                <label for="descripcion">Descripción *</label>
                                <input type="text" id="descripcion" name="descripcion" class="control" placeholder="La descripción no puede tener más de 900 caracteres">
                                <div class="erroresDescripcion coloresErrores">
                                <% if (locals.errors && errors.descripcion){  %>
                                    <div  style="color:rgb(255,0,0);">
                                      <%= errors.descripcion.msg %> 
                                    </div>
                                    <% } %> 
                                </div>
                            </p>
                        </div>
                        <div class="control-formulario">
                            <p>
                                <label for="precio">Precio *</label>
                                <input type="text" id="precio" name="precio" class="control">
                                <div class="erroresPrecio coloresErrores">
                                <% if (locals.errors && errors.precio){  %>
                                    <div  style="color:rgb(255,0,0);">
                                      <%= errors.precio.msg %> 
                                    </div>
                                    <% } %> 
                                </div>
                            </p>
                        </div>
                        <div class="control-formulario">
                            <p>
                                <label for="color">Color *</label>
                                <input type="text" id="color" name="color" class="control">
                                <div class="erroresColor coloresErrores">
                                <% if (locals.errors && errors.color){  %>
                                    <div  style="color:rgb(255,0,0);">
                                      <%= errors.color.msg %> 
                                    </div>
                                    <% } %> 
                                </div>
                            </p>
                        </div>
                       

                            <div class="control-formulario contenedor-select">
                                
                                <label>Tallas: (Elige las tallas que aplican para el producto) *<label>
                                <div class="erroresTalla coloresErrores">
                                    <% if (locals.errors && errors.talla){  %>
                                        <div  style="color:rgb(255,0,0);">
                                          <%= errors.talla.msg %> 
                                        </div>
                                        <% } %> 
                                    </div>
                                <% tallas.forEach(talla=> { %>
                                    <label class="form-select">
                                    <input type="checkbox" id='talla' name="talla" class="control control-select" value="<%=talla.id%>"><span><%=talla.valor%></span></label>
                                    <% }) %>
                                    
                            </div>

                            <div class="control-formulario contenedor-select">
                                
                                <label>Categoria: (Elige la categoria del producto) *</label>
                                <div class="erroresCategoria coloresErrores">
                                    <% if (locals.errors && errors.categoria){  %>
                                        <div  style="color:rgb(255,0,0);">
                                          <%= errors.categoria.msg %> 
                                        </div>
                                        <% } %> 
                                    </div>
                                <% categorias.forEach(categoria=> { %>
                                    <label class="form-select">
                                    <input type="radio" name="categoria" class="control control-select" value="<%=categoria.id%>"><span><%=categoria.nombre.charAt(0).toUpperCase()+categoria.nombre.slice(1)%></span>
                                </label>

                                    <% }) %>
                               
                                       
                            </div>

                            <div class="control-formulario contenedor-select">
                                
                                <label>Tipo: (Elige el tipo de producto) *</label>
                                <div class="erroresTipo coloresErrores">
                                    <% if (locals.errors && errors.tipo){  %>
                                        <div  style="color:rgb(255,0,0);">
                                          <%= errors.tipo.msg %> 
                                        </div>
                                        <% } %> 
                                    </div>
                                <% tipos.forEach(tipo=> { %>
                                    <label class="form-select">
                                    <input type="radio" name="tipo" class="control control-select" value="<%=tipo.id%>"><span><%=tipo.nombre%></span>
                                </label>

                                    <% }) %>
                             
                                        
                            </div>

                            <div class="col-12 col-md-6">
                                <label for="imagen" class="control-formulario">Imagen del producto *</label>
                                <input type="file" id="imagen" name="imagen" class="control-formulario">
                                <div class="col-12">
                                    <div class="erroresImagen coloresErrores">
                                    <% if (locals.errors && errors.imagen){  %>
                                        <div  style="color:rgb(255,0,0);">
                                          <%= errors.imagen.msg %> 
                                        </div>
                                        <% } %> 
                                </div>
                                    <div>
                                        <p>
                                            <button class="button-log" type="submit">Crear</button>
                                        </p>
                                    </div>
                    </form>
                </div>


            </div>
            <script src="/js/product.js"></script>
        </main>
        <!--FOOTER-->
        <%- include ('./partials/footer') %>

</body>

</html>