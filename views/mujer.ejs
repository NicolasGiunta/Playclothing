!DOCTYPE html>
<html lang="en">
    
<!--traigo el head-->
    <%- include ('./partials/head') %>
    
<!--traigo el css-->
    <  <link rel="stylesheet" href="/css/stylesHombre.css">

<body>
    
    <!--HEADER-->
    <%- include ('./partials/header') %>

<main>
    <div class=productos>

    <% let listaDeProductosMujer = productos.filter(element => element.categoria_id == 2) %>



    <% for (let i = 0; i < listaDeProductosMujer.length; i++){ %>     
        <div class='imagenYdescripcion'><a href="/producto/mujer/<%=listaDeProductosMujer[i].id%>"><img class='foto' src=<%= listaDeProductosMujer[i].imagen%> ></a>
        <h4><%= listaDeProductosMujer[i].nombreDelProducto%></h4>
        <h6>
            <%if(listaDeProductosMujer[i].precio>= 1000) { %> $
                <%=toThousand(listaDeProductosMujer[i].precio)%>
                    <% } else { %> $
                            <%=listaDeProductosMujer[i].precio%>
                  <%  } %>
        </h6>


    </div>
        <% } %> 
    </div>

<!-- whatsapp -->
<%- include ('./partials/whatsapp') %>
</main>

<!--FOOTER-->
<%- include ('./partials/footer') %>

</body>
</html>