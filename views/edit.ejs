<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include ('./partials/head') %>

        <link href="/css/stylesForm.css" rel="stylesheet">
    </head>
    <body>
    <!--HEADER-->
    <%- include ('./partials/header') %>
    
        <main>
            <h1>Editar Producto</h1>
            <div class="tablet">
                <div class="caja2"><h5> Editar producto: <%= producto.nombreDelProducto %> </h5>

                    <form action="/producto/<%= producto.id %>?_method=PUT" method="POST" class="create-form" enctype="multipart/form-data">
                        <div class="control-formulario">
                        <p>
                            <label for="nombreDelProducto">Nombre del producto</label>
                            <input type="text" id="nombreDelProducto"  name="nombreDelProducto" class="control">
                        </p>
                        </div>
                        <div class="control-formulario">
                            <p>
                                <label for="descripcion" >Descripci√≥n</label>
                                <input type="text" id="descripcion" name="descripcion" class="control">
                            </p>
                        </div>
                        <div class="control-formulario">
                            <p>
                                <label for="precio" >precio</label>
                                <input type="number" id="precio" name="precio" class="control">
                            </p>
                        </div>
                        <div class="control-formulario">
                            <p>
                                <label for="colores" >colores</label>
                                <input type="text" id="colores" name="colores" class="control">
                            </p>
                        </div>
                        <div class="control-formulario">
                            <p>
                            <p>Sexo:</p>
                                <label for="mujer" >mujer</label>
                                <input type="radio" id="mujer" name="sexo" class="control" value="mujer">
                                <label for="hombre" >hombre</label>
                                <input type="radio" id="hombre" name="sexo" class="control" value="hombre">
                            </p>
                        </div>

                        <div class="col-12 col-md-6">
                            <label for="imagen" class="control-formulario">imagen</label>
                            <input type="file" id="imagen" name="imagen" class="control-formulario">
                        <div class="col-12">
                        
                        <div>
                            <p>
                                <button class="button-log" type="submit" >Editar</button>
                            </p>
                        </div>     
                    </form>
                </div>


            </div>

        </main>
    <!--FOOTER-->
    <%- include ('./partials/footer') %>

    </body>
    